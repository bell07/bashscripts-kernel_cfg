# Misc ACPI
CONFIG_ACPI_FAN=m
CONFIG_ACPI_PROCESSOR=y
CONFIG_ACPI_THERMAL=m

# VM Tools needs that
CONFIG_BINFMT_MISC=y

# IDE controller / CDROM
CONFIG_BLK_DEV_GENERIC=y
CONFIG_BLK_DEV_SD=y
CONFIG_BLK_DEV_PIIX=y
CONIFG_ATA_GENERIC=y
CONFIG_ATA_PIIX=y
CONFIG_I2C_PIIX4=y

# SCSI controller
CONFIG_FUSION=y
CONFIG_FUSION_SPI=y

# Sound card
CONFIG_SND_ENS1371=m

# BIOS access
CONFIG_EDD=m

# Network kard
CONFIG_NET_VENDOR_INTEL=y
CONFIG_E1000=m

# Video card
CONFIG_DRM_VMWGFX=m
CONFIG_DRM_VMWGFX_FBCON=y

# Virtualization
CONFIG_X86_VSMP=y
CONFIG_VMWARE_VMCI=m
CONFIG_VMWARE_BALLOON=m
CONFIG_SCSI_LOWLEVEL=y
CONFIG_VMWARE_PVSCSI=y
CONFIG_VMXNET3=m
CONFIG_VSOCKETS=m
CONFIG_VMWARE_VMCI_VSOCKETS=m
