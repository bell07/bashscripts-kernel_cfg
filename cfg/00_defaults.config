## Support for /proc/config.gz
CONFIG_IKCONFIG=y
CONFIG_IKCONFIG_PROC=y

## Default power save + statistics
CONFIG_CPU_FREQ_DEFAULT_GOV_ONDEMAND=y
CONFIG_CPU_FREQ_STAT=y

# Usual file system codepages
CONFIG_NLS_CODEPAGE_437=m
CONFIG_NLS_CODEPAGE_850=m
CONFIG_NLS_ISO8859_1=m
CONFIG_NLS_ISO8859_15=m
CONFIG_SND_DYNAMIC_MINORS=y

# Filesystems
CONFIG_UDF_FS=m
CONFIG_CIFS=m
CONFIG_FUSE_FS=m

## Recommended for pulseaudio and HD-Audio
CONFIG_SND_HDA_PREALLOC_SIZE=2048

## Required for chromium/chrome sandbox
CONFIG_NAMESPACES=y
CONFIG_IPC_NS=y

## CUPS does have own USB drivers implementation
CONFIG_USB_PRINTER=n

## Drivers disabled by default. Maybe re-enabled in other configuration
CONFIG_USB_NET_DRIVERS=n

CONFIG_WIRELESS=n
CONFIG_WLAN=n
CONFIG_NETFILTER=n
CONFIG_NF_CONNTRACK=n
CONFIG_IP_NF_IPTABLES=n
CONFIG_IP6_NF_IPTABLES=n
CONFIG_IP6_NF_IPTABLES=n
CONFIG_NETFILTER_XTABLES=n

## No remote control by default
CONFIG_RC_CORE=n

## No PCMCIA by default
CONFIG_PCCARD=n

## Diffie-Hellman encryption trough sys-apps/keyutils
CONFIG_KEY_DH_OPERATIONS=y

## Required for AMDGPU driver but maybe usefull for others
CONFIG_CHECKPOINT_RESTORE=y
